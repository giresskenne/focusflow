{
  "expo": {
    "name": "focusflow-app",
    "slug": "focusflow-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "scheme": "com.giress.focusflow-app",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#F3F6FF"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.giress.focusflow-app",
      "buildNumber": "1",
      "config": {
        "usesNonExemptEncryption": false
      },
      "infoPlist": {
        "NSFamilyControlsUsageDescription": "FocusFlow needs access to Screen Time to block distracting apps during your focus sessions."
      },
      "splash": {
        "image": "./assets/splash-icon.png",
        "resizeMode": "contain",
        "backgroundColor": "#F3F6FF"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.giress.focusflowapp"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-notifications",
      [
        "./plugins/app-blocker-plugin",
        {
          "appGroup": "group.com.giress.focusflow"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "d1d7cdb8-e7ff-4cc1-9d84-75772efaa57a"
      }
    }
  }
}
