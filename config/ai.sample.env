# AI Voice Assistant (Mada) config sample
# Copy to .env or .env.production and adjust values as needed

# OpenAI or compatible gateway for intent parsing (optional)
OPENAI_API_KEY=replace_me
OPENAI_BASE_URL=https://api.openai.com/v1
AI_INTENT_MODEL=gpt-4o-mini
AI_TEMPERATURE=0.2

# Expo-public mirrors (recommended for RN/Expo env access)
EXPO_PUBLIC_OPENAI_API_KEY=
EXPO_PUBLIC_OPENAI_BASE_URL=
EXPO_PUBLIC_AI_INTENT_MODEL=gpt-4o-mini
EXPO_PUBLIC_AI_TEMPERATURE=0.2

# Feature flags
AI_VOICE_ENABLED=false
AI_INTENTS_ENABLED=false
AI_AUTO_APPLY=false
SIRI_SHORTCUTS_ENABLED=false

# Expo-public flags (preferred)
EXPO_PUBLIC_AI_VOICE_ENABLED=false
EXPO_PUBLIC_AI_INTENTS_ENABLED=false
EXPO_PUBLIC_AI_AUTO_APPLY=false
EXPO_PUBLIC_SIRI_SHORTCUTS_ENABLED=false

# Hybrid intent parsing (local-first with cloud fallback)
AI_HYBRID_MODE=true
AI_CONFIDENCE_THRESHOLD=0.7
AI_CLOUD_FALLBACK_ENABLED=true

# Expo-public mirrors
EXPO_PUBLIC_AI_HYBRID_MODE=true
EXPO_PUBLIC_AI_CONFIDENCE_THRESHOLD=0.7
EXPO_PUBLIC_AI_CLOUD_FALLBACK_ENABLED=true

# Text-to-speech (TTS)
AI_TTS_ENABLED=true
EXPO_PUBLIC_AI_TTS_ENABLED=true
# Provider: 'ios' (expo-speech) or 'openai'
EXPO_PUBLIC_AI_TTS_PROVIDER=ios
# When provider=openai, choose a voice id (e.g., alloy, aria, verse, sol, luna)
EXPO_PUBLIC_AI_TTS_VOICE=alloy

# iOS App Group (must match entitlements)
IOS_APP_GROUP_ID=group.cc.focusflow.shared
EXPO_PUBLIC_IOS_APP_GROUP_ID=

# Logging & privacy
LOG_LEVEL=info
FF_PRIVACY_MODE=standard
EXPO_PUBLIC_LOG_LEVEL=info
EXPO_PUBLIC_FF_PRIVACY_MODE=standard
