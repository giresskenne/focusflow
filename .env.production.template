# Production Environment Template
# Copy this to .env.production locally and fill in your real values
# NEVER commit .env.production to git - it's in .gitignore

# =============================================================================
# ENVIRONMENT
# =============================================================================
EXPO_PUBLIC_ENV=production

# =============================================================================
# SUPABASE (get from https://supabase.com/dashboard/project/_/settings/api)
# =============================================================================
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# =============================================================================
# IN-APP PURCHASES - RevenueCat
# Get from: https://app.revenuecat.com/settings/api-keys
# =============================================================================
EXPO_PUBLIC_ENABLE_STOREKIT_TEST=false
EXPO_PUBLIC_ENABLE_IAP=true
REVENUECAT_IOS_API_KEY=your_revenuecat_ios_api_key_here
EXPO_PUBLIC_REVENUECAT_IOS_API_KEY=your_revenuecat_ios_api_key_here
EXPO_PUBLIC_RC_ENTITLEMENT=premium

# =============================================================================
# OPENAI API (get from https://platform.openai.com/api-keys)
# IMPORTANT: Store this in EAS Secrets for production builds:
#   eas secret:create --scope project --name EXPO_PUBLIC_OPENAI_API_KEY --value "your-key"
# =============================================================================
EXPO_PUBLIC_OPENAI_API_KEY=your_openai_api_key_here
EXPO_PUBLIC_OPENAI_BASE_URL=https://api.openai.com/v1
EXPO_PUBLIC_AI_INTENT_MODEL=gpt-4o-mini
EXPO_PUBLIC_AI_TEMPERATURE=0.2

# =============================================================================
# FEATURE FLAGS - PRODUCTION
# =============================================================================
# Disable dev-only features
EXPO_PUBLIC_ENABLE_IOS_BLOCKING_DEV=false
EXPO_PUBLIC_ENABLE_MIGRATION_UPLOAD=false

# AI Features
EXPO_PUBLIC_AI_VOICE_ENABLED=true
EXPO_PUBLIC_AI_INTENTS_ENABLED=true
EXPO_PUBLIC_AI_AUTO_APPLY=false
EXPO_PUBLIC_SIRI_SHORTCUTS_ENABLED=true

# Text-to-Speech
EXPO_PUBLIC_AI_TTS_ENABLED=true
EXPO_PUBLIC_AI_TTS_PROVIDER=openai
EXPO_PUBLIC_AI_TTS_VOICE=nova

# Hybrid AI Mode (local-first with cloud fallback)
EXPO_PUBLIC_AI_HYBRID_MODE=true
EXPO_PUBLIC_AI_CONFIDENCE_THRESHOLD=0.55
EXPO_PUBLIC_AI_CLOUD_FALLBACK_ENABLED=true

# =============================================================================
# iOS CONFIGURATION
# =============================================================================
IOS_APP_GROUP_ID=group.com.giress.focusflow
EXPO_PUBLIC_IOS_APP_GROUP_ID=group.com.giress.focusflow

# =============================================================================
# LOGGING & PRIVACY
# =============================================================================
LOG_LEVEL=info
FF_PRIVACY_MODE=standard
EXPO_PUBLIC_LOG_LEVEL=info
EXPO_PUBLIC_FF_PRIVACY_MODE=standard
